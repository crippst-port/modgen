{{!
    @template aiplacement_modgen/ai_policy

    AI Policy Acceptance form.

    Context variables required for this template:
    * courseid - Course ID
    * policytext - Policy text to display
}}
<div class="ai-policy-acceptance p-3">
    <h4>{{#str}}aipolicyacceptance, aiplacement_modgen{{/str}}</h4>
    <div class="alert alert-info">
        <p>{{{policytext}}}</p>
    </div>
    <div class="form-check mb-3">
        <input class="form-check-input" type="checkbox" id="acceptpolicy">
        <label class="form-check-label" for="acceptpolicy">
            {{#str}}acceptaipolicy, aiplacement_modgen{{/str}}
        </label>
    </div>
    <form id="ai-policy-form" method="post" action="{{config.wwwroot}}/ai/placement/modgen/prompt.php">
        <input type="hidden" name="courseid" value="{{courseid}}">
        <input type="hidden" name="acceptpolicy" value="1">
        <input type="hidden" name="embedded" value="1">
        <input type="hidden" name="ajax" value="1">
        <input type="hidden" name="sesskey" value="{{sesskey}}">
    </form>
    <div class="mt-3">
        <button type="button" class="btn btn-primary" id="accept-policy-btn" disabled>
            {{#str}}accept{{/str}}
        </button>
    </div>
</div>
{{#js}}
require(['jquery'], function($) {
    $('#acceptpolicy').on('change', function() {
        $('#accept-policy-btn').prop('disabled', !this.checked);
    });
    
    $('#accept-policy-btn').on('click', function() {
        if ($('#acceptpolicy').is(':checked')) {
            $('#ai-policy-form').submit();
        }
    });
});
{{/js}}
