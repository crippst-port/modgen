<style>
.exploration-sections {
    display: flex;
    flex-direction: column;
    gap: 1.5rem;
}

.exploration-section {
    background-color: #fff;
    border-left: 4px solid #0066cc;
    border-radius: 0.25rem;
    box-shadow: 0 0.125rem 0.25rem rgba(0, 0, 0, 0.075);
    transition: box-shadow 0.3s ease;
}

.exploration-section:hover {
    box-shadow: 0 0.25rem 0.5rem rgba(0, 0, 0, 0.15);
}

.exploration-section .exploration-title {
    margin: 0;
    padding: 1rem;
    font-size: 1.25rem;
    font-weight: 600;
    color: #0066cc;
    border-bottom: 1px solid #e9ecef;
}

.exploration-section .exploration-content {
    padding: 1rem;
    line-height: 1.6;
    color: #333;
}

.exploration-section .exploration-content pre {
    background-color: #f8f9fa;
    border: 1px solid #dee2e6;
    border-radius: 0.25rem;
    padding: 1rem;
    overflow-x: auto;
    font-size: 0.875rem;
    line-height: 1.4;
}

.exploration-section .exploration-content p {
    margin: 0 0 1rem 0;
}

.exploration-section .exploration-content ul,
.exploration-section .exploration-content ol {
    margin: 0 0 1rem 0;
    padding-left: 1.5rem;
}

.exploration-section .exploration-content li {
    margin-bottom: 0.5rem;
}
</style>

<div class="exploration-sections">
    {{#pedagogical}}
    <section class="exploration-section">
        <h3 class="exploration-title">ðŸŽ“ Pedagogical Approach</h3>
        <div class="exploration-content" data-insight="pedagogical">
            {{{pedagogical}}}
        </div>
    </section>
    {{/pedagogical}}

    {{#learning_types}}
    <section class="exploration-section">
        <h3 class="exploration-title">ðŸ“š Learning Types (Laurillard)</h3>
        <div class="exploration-content" data-insight="learning_types">
            {{{learning_types}}}
        </div>
    </section>
    {{/learning_types}}

    {{#activities}}
    <section class="exploration-section">
        <h3 class="exploration-title">Activity Breakdown</h3>
        <div class="exploration-content" data-insight="activities">
            {{{activities}}}
        </div>
    </section>
    {{/activities}}

    {{#improvements}}
    <section class="exploration-section">
        <h3 class="exploration-title">ðŸ’¡ Improvement Suggestions</h3>
        <div class="exploration-content" data-insight="improvements">
            {{{improvements}}}
        </div>
    </section>
    {{/improvements}}

