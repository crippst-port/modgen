<div class="card mt-3 mb-4 border-info">
    <div class="card-body">
        
        <h4 class="card-title text-info">
            <i class="fas fa-tasks mr-2"></i>{{#str}}analysiscard,aiplacement_modgen{{/str}}
        </h4>
        <div class="row mt-3">
            <div class="col-md-6">
                <h5 class="fw-bold">{{#str}}strengths,aiplacement_modgen{{/str}}</h5>
                <ul class="list-unstyled">
                    {{#positives}}
                    <li class="mb-2">
                        <i style="color: #357a32;" class="fas fa-check-circle mr-2"></i>{{.}}
                    </li>
                    {{/positives}}
                </ul>
            </div>
            <div class="col-md-6">
                <h5 class=" fw-bold">{{#str}}keyimprovements,aiplacement_modgen{{/str}}</h5>
                <ul class="list-unstyled">
                    {{#improvements}}
                    <li class="mb-2">
                        <i style="color: #f0ad4e;" class="fas fa-arrow-circle-right mr-2"></i>{{.}}
                    </li>
                    {{/improvements}}
                </ul>
            </div>
        </div>
    </div>
</div>
