<div class="p-3">

  <p>{{suggest_description}}</p>

  <div class="form-group">
    <label for="suggest-section-select">{{section_label}}</label>
    <select id="suggest-section-select" class="form-control">
      {{#sections}}
        <option value="{{value}}"{{#selected}} selected{{/selected}}>{{{name}}}</option>
      {{/sections}}
    </select>
  </div>

  <div class="form-group">
    <button class="btn btn-primary" id="suggest-scan-btn">{{suggestactivities}}</button>
    <span id="suggest-loading" style="display:none; margin-left:8px;">{{loadingthinking}}</span>
  </div>

  <div id="suggest-results"></div>

  <div class="mt-3">
    <button class="btn btn-success" id="suggest-create-selected" disabled>{{approveandcreate}}</button>
  </div>
</div>
