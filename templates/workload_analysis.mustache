<div class="card mb-4 border-info">
    <div class="card-body">
        <h4 class="card-title text-info">
            <i class="fas fa-chart-line mr-2"></i>{{heading}}
        </h4>
        <div class="card-text mb-4">
            {{#paragraphs}}
            <p>{{.}}</p>
            {{/paragraphs}}
        </div>
        
        <!-- Activities per Topic/Week Chart -->
        <div class="mt-4">
            <h5>Activities per Topic/Week</h5>
            <div style="position: relative; height: 300px;">
                <canvas id="section-activity-chart"></canvas>
            </div>
        </div>
    </div>
</div>
